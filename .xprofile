# GTK Theme
export GTK_THEME=Adwaita:dark

# Noisetorch
noisetorch -i alsa_input.usb-Kingston_Technology_Company_HyperX_Cloud_Flight_Wireless-00.mono-fallback

# xbindkeys
xbindkeys

# Monitor config
xrandr --output HDMI-A-0 --primary --set TearFree on
xrandr --output HDMI-A-0 --set TearFree on --auto --output DisplayPort-0 --auto --right-of HDMI-A-0 --set TearFree on

# Don't Randomly Turn off
xset s off
xset -dpms
xset s noblank

# Speedy keys
xset r rate 210 40

# Environment variables set everywhere
export EDITOR="nvim"
export TERMINAL="kitty"
export BROWSER="firefox"
export SHELL="zsh"

## XDG Paths
export XDG_CONFIG_HOME=$HOME/.config
export XDG_CACHE_HOME=$HOME/.cache
export XDG_DATA_HOME=$HOME/.local/share

# Screenshots
flameshot &

# zsh config dir
export ZDOTDIR=$HOME/.config/zsh

#nitrogen background
nitrogen --restore

# polkit
/usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1 &

#xbindkeys 
killall -HUP xbindkeys

# load Xresources
[[ -f ~/.Xresources ]] && xrdb -merge -I$HOME ~/.Xresources

# load redshift
redshift -l manual
