## specify a mouse button
#"xterm"
#  control + b:2

"/home/fots/.local/bin/flameopen"
  Control+Print

"rofi -combi-modi window,drun -show combi"
  Menu

"xvkbd -xsendevent -text '\C\[Page_Up]'"
  Control+Mod1+K

"xvkbd -xsendevent -text '\C\[Page_Down]'"
  Control+Mod1+J

"xvkbd -xsendevent -text '\[Page_Up]'"
  Mod1+K

"xvkbd -xsendevent -text '\[Page_Down]'"
  Mod1+J

"xvkbd -xsendevent -text '\A\[Left]'"
  Mod1+P

"xvkbd -xsendevent -text '\A\[Right]'"
  Mod1+N

# arrow keys to super alt hjkl
"xvkbd -xsendevent -text '\[Up]'"
  Mod4+Mod1+K

"xvkbd -xsendevent -text '\[Down]'"
  Mod4+Mod1+J

"xvkbd -xsendevent -text '\[Left]'"
  Mod4+Mod1+H

"xvkbd -xsendevent -text '\[Right]'"
  Mod4+Mod1+L

"xvkbd -xsendevent -text '\C\[Up]'"
  Control+Mod4+Mod1+K

"xvkbd -xsendevent -text '\C\[Down]'"
  Control+Mod4+Mod1+J

"xvkbd -xsendevent -text '\C\[Left]'"
  Control+Mod4+Mod1+H

"xvkbd -xsendevent -text '\C\[Right]'"
  Control+Mod4+Mod1+L

"xvkbd -xsendevent -text '\C\S\[Up]'"
  Control+Shift+Mod4+Mod1+K

"xvkbd -xsendevent -text '\C\S\[Down]'"
  Control+Shift+Mod4+Mod1+J

"xvkbd -xsendevent -text '\C\S\[Left]'"
  Control+Shift+Mod4+Mod1+H

"xvkbd -xsendevent -text '\C\S\[Right]'"
  Control+Shift+Mod4+Mod1+L

# home and end keybinds
"xvkbd -xsendevent -text '\[Home]'"
  Control+Mod1+H

"xvkbd -xsendevent -text '\[End]'"
  Control+Mod1+L

"xvkbd -xsendevent -text '\S\[Home]'"
  Control+Mod1+Shift+H

"xvkbd -xsendevent -text '\S\[End]'"
  Control+Mod1+Shift+L


